        // JavaScript code for dynamic carousel text
        const carouselElement = document.querySelector('#heroCarousel');
        const carouselTextElement = document.querySelector('#carousel-text');
        carouselElement.addEventListener('slid.bs.carousel', function (event) {
            const activeIndex = event.to;
            carouselTextElement.innerHTML = carouselContents[activeIndex];
        });
        carouselTextElement.innerHTML = carouselContents[0]; // Set initial text
    </script>
</body>
</html>